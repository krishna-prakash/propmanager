type Landlord {
      id: ID! @unique
      fullName: String!
      email: String! @unique
      password: String
      mobile: Int
      dob: DateTime
      occupation: String
      address1: String
      address2: String
      postcode: String!
      country: String!
      agent: Agent
      properties: [Property!]
}

type Agent {
      id: ID! @unique
      businessService: String
      title: String
      firstName: String!
      lastName: String
      displayName: String
      email: String! @unique
      password: String
      mobile: Int
      fax: Int
      address1: String
      address2: String
      postcode: String!
      country: String!
      website: String
      clients: [Landlord]
}

type Property {
      id: ID! @unique
      address1: String!
      address2: String
      postcode: String!
      city: String!
      country: String!
      percentageofownership: Int
      status: PropertyStatus!
      type: PropertyType!
      purchaseprice: Int
      currentprice: Int
      mortgageAmount: Int
      mortgageInterestRate: Int
      annualRentalIncome: Int
      currency: String
      tenants: Tenant
      landlords: Landlord
}

type Tenant {
      id: ID! @unique
      title: String
      firstName: String!
      middleName: String
      lastName: String
      displayName: String!
      personalEmail: String! @unique
      workEmail: String! @unique
      homenumber: Int
      mobilenumber: Int
      typeOfLet: TypeOfLet!
      rentInterval: String!
      day: String
      startDate: DateTime
      endDate: DateTime
      notes: String
      property: Property
}

type PropertyStatus {
      id: ID! @unique
      status: String!
}
type PropertyType {
      id: ID! @unique
      type: String!
}

type TypeOfLet {
      id: ID! @unique
      name: String
}
