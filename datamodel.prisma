type Landlord {
      id: ID! @id
      fullName: String!
      email: String! @unique
      password: String
      mobile: Int
      dob: DateTime
      occupation: String
      address1: String
      address2: String
      postcode: String!
      country: String!
      agent: Agent
      properties: [Property!]
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}

type Agent {
      id: ID! @id
      businessService: String
      title: String
      firstName: String!
      lastName: String
      displayName: String
      email: String! @unique
      password: String
      mobile: Int
      fax: Int
      address1: String
      address2: String
      postcode: String!
      country: String!
      website: String
      clients: [Landlord]
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}

type Property {
      id: ID! @id
      address1: String!
      address2: String
      postcode: String!
      city: String!
      country: String!
      percentageofownership: Int
      status: PropertyStatus!
      type: PropertyType!
      purchaseprice: Int
      currentprice: Int
      mortgageAmount: Int
      mortgageInterestRate: Int
      annualRentalIncome: Int
      currency: String
      tenants: Tenant @relation(link: INLINE)
      landlords: Landlord
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}

type Tenant {
      id: ID! @id
      title: String
      firstName: String!
      middleName: String
      lastName: String
      displayName: String!
      personalEmail: String! @unique
      workEmail: String! @unique
      homenumber: Int
      mobilenumber: Int
      typeOfLet: TypeOfLet!
      rentInterval: String!
      day: String
      startDate: DateTime
      endDate: DateTime
      notes: String
      property: Property
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}

type PropertyStatus {
      id: ID! @id
      status: String!
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}
type PropertyType {
      id: ID! @id
      type: String!
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}

type TypeOfLet {
      id: ID! @id
      name: String
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}

type Type {
      id: ID! @id
      name: String
      categories: [Category!]
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}

type VehicleType {
      id: ID! @id
      vehicleType: String!
      description: String
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}

type Category{
      id: ID! @id
      name: String
      description: String
      type: Type
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}

type UserCategory{
      id: ID! @id
      userCategoryName: String
      description: String
      Category: Category
      Landlord: Landlord
      Agent: Agent
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}

type Transaction{
      id: ID! @id
      amount: Int
      currency: String
      transactionDate: DateTime
      description: String
      type: Type
      vehicle: VehicleType
      category: Category
      property: Property
      Landlord: Landlord
      supplier: Supplier
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}

type Supplier{
      id: ID! @id
      title: String
      firstName: String
      lastName: String
      company: String
      address1: String
      address2: String
      town: String
      country: String
      postcode: String
      email: String
      phone: Int
      mobile: Int
      updatedAt: DateTime @updatedAt
      createdAt: DateTime @createdAt
}


